{
  "name": "server-cli",
  "version": "0.0.1",
  "description": "A simple CLI for the LibreCast Server.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-linux": "caxa --directory \"$(pwd)\" --command \"{{caxa}}/node_modules/.bin/node\" \"{{caxa}}/index.js\" --output \"LibreCast-CLI\"",
    "build-win": "caxa --directory \"$(cwd)\" --command \"{{caxa}}/node_modules/.bin/node\" \"{{caxa}}/index.js\" --output \"LibreCast-CLI.exe\""
    "build-osx": "caxa --directory \"$(pwd)\" --command \"{{caxa}}/node_modules/.bin/node\" \"{{caxa}}/index.js\" --output \"LibreCast-CLI.App\"",
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Libre-Cast/server-cli.git"
  },
  "author": "BurnyLlama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Libre-Cast/server-cli/issues"
  },
  "homepage": "https://github.com/Libre-Cast/server-cli#readme",
  "devDependencies": {
    "caxa": "^1.0.0"
  }
}
